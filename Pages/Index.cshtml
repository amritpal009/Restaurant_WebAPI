    <!-- java script files that will help to link the front end and back end-->
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.0.3.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <script>
        var uri = 'api/Menus';

        //Java script main function so JS start from here
        $(document).ready(function () {
            $.getJSON(uri)
                .done(function (data) {
                    $("#MenusTemplate").tmpl(data).appendTo("#allMenus");
                });
        });
        // function to get all books data and show on web page
        function getallMenus() {
            $.getJSON(uri)
                .done(function (data) {
                    $("#allMenus").text("");
                    $("#MenusTemplate").tmpl(data).appendTo("#allMenus");
                });
        }

        // function to add data for new book
        function addBooks() {
            var _dish_Title = $('#dish_Title').val();
            var _dietary_Restrictions = $('#dietary_Restrictions').val();
            var _rating = $('#rating').val();
            
            var _price = parseFloat($('#price').val());
            var Book = {

                dish_Title: _dish_Title,
                dietary_Restrictions: _dietary_Restrictions,
                rating: _rating,
               
                price: _price
            };
            $.ajax({
                type: "POST",
                url: uri,
                data: JSON.stringify(Book),
                contentType: "application/json; charset=utf-8"
            }).done(function (response) {
                $("#result").html("Sucessfuly added");
                getallMenus();
            }).fail(function (jqXHR, textStatus) {
                $("#result").html("Something wrong.");
            });
        }

        //funtion to delete a particular book based on id//
        function remove(id) {
            var yes = confirm("Please confirm to delete this Book?");
            if (yes) {
                $.ajax({
                    type: "DELETE",
                    url: uri + "/" + id,
                }).done(function (response) {
                    getallMenus();
                });
            }
        }
        // funtion to fill the data into update template//
        function getbookForUpdate(id) {
            $.ajax({
                type: "GET",
                url: uri + "/" + id,
                contentType: "application/json"
            }).done(function (response) {
                $('#Update_id').val(response.id);
                $('#Update_dish_Title').val(response.dish_Title);
                $('#Update_dietary_Restrictions').val(response.dietary_Restrictions);
                $('#Update_rating').val(response.rating);
               
                $('#Update_price').val(response.price);
            });
        }

        // function to update data of the book
        function UpdateBooks() {
            var _dish_Title = $('#Update_dish_Title').val();
            var _dietary_Restrictions = $('#Update_dietary_Restrictions').val();
            var _rating = $('#Update_rating').val();
           
            var _price = parseFloat($('#Update_price').val());
            var BooksUpdate = {
                id: parseInt($('#Update_id').val()),
                dish_Title: _dish_Title,
                dietary_Restrictions: _dietary_Restrictions,
                rating: _rating,
               
                price: _price
            };

            $.ajax({
                type: "PUT",
                url: uri + "/" + $('#Update_id').val(),
                data: JSON.stringify(BooksUpdate),
                contentType: "application/json; charset=utf-8"
            }).done(function (response) {
                $("#update_result").html("Success");
                getallMenus();
            }).fail(function (jqXHR, textStatus) {
                $("#update_result").html("Something wrong in updating book.");
            });
        }
    </script>

    <!-- below mentioned code will create the template on the web page to display all books -->
    <script id="MenusTemplate" type="text/x-jquery-tmpl">
        <div class="col-lg-3" style="margin:15px;">
            <div class="card card text-white bg-dark border-warning mb-3" style="width: 18rem; padding:20px">
                <div class="card-body">
                    <h5 class="card-title">Dish Title: ${dish_Title}</h5>
                    <p class="card-text">Dietary Restrictions :  ${dietary_Restrictions}</p>
                    <p class="card-text">Rating : ${rating}</p>
                   
                    <p class="card-text">Price : ${price}</p>
                </div>
                <span>
                    <button class="btn btn-primary" onclick="getbookForUpdate('${id}')" data-toggle="modal" data-target="#UpdateBooks">Update</button>
                    <a href="#" class="btn btn-danger" onclick="remove('${id}')">Delete</a>
                </span>
            </div>
        </div>
    </script>

